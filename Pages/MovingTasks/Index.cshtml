@page
@using MovingApp.Models
@model MovingApp.Pages.MovingTasks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Mission Control</h1> 
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Task[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Task[0].DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Task[0].Owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Task[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Task) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner)
            </td>
                @if(item.Status == (int)StatusTypes.Complete)
                {
                        <td>Complete</td>
                }
                @if(item.Status == (int)StatusTypes.Incomplete)
                {
                        <td>Incomplete</td>
                }
                @if(item.Status == (int)StatusTypes.Cancelled)
                {
                        <td>Cancelled</td>
                }
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
